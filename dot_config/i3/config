exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always feh --bg-fill ~/Pictures/pexels-tom-swinnen-946344.jpg
exec --no-startup-id betterlockscreen -w dim

# Scrolling for mouse
exec xinput set-prop 14 'libinput Natural Scrolling Enabled' 0

